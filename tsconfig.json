{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "lib": ["es6"],
    "rootDir": "src",
    "pretty": true,
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@config": ["src/config/index"],
      "@shared/*": ["src/shared/*"],
      "@modules/*": ["src/modules/*"],
      "@users/*": ["src/modules/users/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "experimentalDecorators": true
  }
}
